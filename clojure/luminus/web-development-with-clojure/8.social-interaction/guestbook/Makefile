all: run

run:
	lein run

repl:
	lein repl

uberjar:
	lein uberjar

war:
	lein immutant war

uberwar:
	lein uberwar

cljs-compile:
	npx shadow-cljs compile app

cljs-watch:
	npx shadow-cljs watch app

cljs-repl:
	npx shadow-cljs cljs-repl app

clean:
	rm -rf node_modules target

.PHONY:	all run repl uberjar war uberwar clean
